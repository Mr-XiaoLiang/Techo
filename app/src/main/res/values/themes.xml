<resources>
    <!-- Base application theme. -->
    <style name="Theme.Techo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_4</item>
        <item name="colorPrimaryVariant">@color/brand_7</item>
        <item name="colorOnPrimary">@color/gray_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_4</item>
        <item name="colorSecondaryVariant">@color/brand_7</item>
        <item name="colorOnSecondary">@color/gray_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Techo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Techo.PopupOverlay" parent="Theme.Techo" />

    <style name="FloatingButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="iconTint">@color/text_gray_2</item>
        <item name="backgroundTint">@color/brand_7</item>
        <item name="fabSize">normal</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="FloatingSubButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="iconTint">@color/text_gray_2</item>
        <item name="backgroundTint">@color/brand_7</item>
        <item name="fabSize">mini</item>
        <item name="elevation">4dp</item>
        <item name="tint">@color/text_gray_2</item>
    </style>

    <style name="EditPanelCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gray_0</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="DialogActivity" parent="Theme.Techo">
        <!-- 背景色透明度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明,设置为false无透明效果 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 窗口样式Dialog -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="TopDialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_top_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_top_out</item>
    </style>

    <style name="RichTextOptionChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkable">true</item>
        <item name="android:textColor">@color/text_gray_9</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">@color/color_rich_option_surface</item>
        <item name="chipIconTint">@color/gray_9</item>
        <item name="chipStrokeColor">@color/color_rich_option_stroke</item>
        <item name="chipSurfaceColor">@color/color_rich_option_surface</item>
        <item name="rippleColor">@color/brand_3</item>
    </style>

    <style name="RichTextFontSizeChip" parent="RichTextOptionChip">
        <item name="checkedIcon">@drawable/ic_baseline_done_24</item>
        <item name="checkedIconEnabled">true</item>
        <item name="checkedIconTint">@color/brand_4</item>
    </style>

</resources>
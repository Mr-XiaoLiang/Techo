<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/gray_0"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <ImageView
            android:id="@+id/qrTypeIconView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="end"
            tools:src="@drawable/ic_wechat"
            tools:tint="@color/gray_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qrTypeNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="16dp"
                android:text="@string/shareWechat"
                android:textColor="@color/text_gray_9"
                android:textSize="20sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/qrInfoContentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qrTimeView"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/text_gray_6"
                    tools:text="12:34:33 - 12/22 - 2022" />

                <ImageView
                    android:id="@+id/qrBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_baseline_qr_code_24"
                    app:tint="@color/brand_9" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DemoActivity">

    <TextView
        android:id="@+id/hValueView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AAA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vValueView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AAA"
        app:layout_constraintTop_toBottomOf="@id/hValueView" />

    <com.lollipop.techo.view.OverflowScrollBar
        android:id="@+id/hScrollBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:color="@color/teal_700"
        android:paddingVertical="4dp"
        app:isHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/vValueView" />

    <com.lollipop.techo.view.OverflowScrollBar
        android:id="@+id/vScrollBar"
        android:layout_width="24dp"
        android:layout_height="300dp"
        android:layout_marginEnd="30dp"
        android:color="@color/teal_700"
        android:paddingHorizontal="4dp"
        app:isHorizontal="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
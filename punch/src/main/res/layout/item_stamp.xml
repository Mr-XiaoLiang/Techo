<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#3f00">

    <com.lollipop.clip.RoundClipLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp"
        android:radius="12dp">

        <com.lollipop.punch2.view.LimitHorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.lollipop.punch2.view.LimitWidthLinearLayout
                android:id="@+id/stampGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/flagNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#f00"
                    android:gravity="center"
                    android:minHeight="68dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="@string/app_name" />

                <ImageView
                    android:id="@+id/punchButton"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="punch button"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_check_circle_outline_24"
                    tools:background="#00f"
                    tools:ignore="HardcodedText" />

            </com.lollipop.punch2.view.LimitWidthLinearLayout>
        </com.lollipop.punch2.view.LimitHorizontalScrollView>

    </com.lollipop.clip.RoundClipLayout>

</FrameLayout>